<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h1 class="card-title">New Event</h1>

          <%= form_with(model: @event, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter event title" %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control", placeholder: "Enter event description" %>
            </div>

            <div class="form-group">
              <%= form.label :date %>
              <%= form.datetime_local_field :date, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :location %>
              <%= form.text_field :location, class: "form-control", placeholder: "Enter event location" %>
            </div>

            <div class="form-group">
              <%= form.label :capacity %>
              <%= form.number_field :capacity, class: "form-control", placeholder: "Enter event capacity" %>
            </div>

            <%= form.submit "Create Event", class: "btn btn-primary btn-block" %>
          <% end %>

          <%= link_to "Back", events_path, class: "btn btn-secondary btn-block mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
